<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/task_board</item>
        <item name="colorAccent">@color/bottom_blue</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/bottom_blue</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/task_board</item>
        <item name="colorAccent">@color/bottom_blue</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>